BoxLayout:
    orientation: 'vertical'

    Label:
        id: time
        text: '[b]00[/b]:00:00'
        markup: True
        font_name: 'Roboto'
        font_size: 60

    BoxLayout:
        height: 90
        orientation: 'horizontal'
        padding: 20
        spacing: 20
        size_hint: (1, None)

        Button:
            id: start_stop
            text: 'Start'
            font_name: 'Roboto'
            font_size: 25
            bold: True
            on_press: app.start_stop()

        Button:
            id: reset
            text: 'Reset'
            font_name: 'Roboto'
            font_size: 25
            bold: True
            on_press: app.reset()

    Label:
        id: stopwatch
        text: '00:00.[size=40]00[/size]'
        font_name: 'Roboto'
        font_size: 60
        markup: True


